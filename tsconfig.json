{
    "compilerOptions": {
        "module": "UMD",
        "target": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "resolveJsonModule": false,
        "jsx": "preserve",
        "lib": [
            "ESNext"
        ]
    },
    "include": [
        "**/*.ts"
    ]
}